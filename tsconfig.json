{
    "compilerOptions": {
        "target": "es5",
        "module": "ES6",
        "moduleResolution": "node",
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "jsx": "react",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "declarationDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "es2015"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "./**/*.test.tsx",
        "./**/*.test.ts"
    ]
}
