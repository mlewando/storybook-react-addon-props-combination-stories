{
  "compilerOptions": {
    "target": "es5",
    "module": "ES6",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "lib": ["es2015", "dom"]
  },
  "include": ["./src/index.ts"],
  "exclude": ["node_modules", "./**/*.test.tsx", "./**/*.test.ts"]
}
